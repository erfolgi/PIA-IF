<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.DetailSkripsiActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="16dp">
            <TextView
                android:id="@+id/skripsi_judul"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Aplikasi Parkir Pesawat Online"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/colorPrimary"/>
            <TextView
                android:id="@+id/skripsi_bidang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Software Engineering"
                android:textAlignment="center"
                android:textStyle="italic"
                android:textSize="12sp"
                android:textColor="@color/colorAccent"/>
            <TextView
                android:id="@+id/skripsi_penulis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Emilia F. / 1234567"
                android:textAlignment="center"
                android:textSize="13sp"
                android:textColor="@color/colorPrimary"/>
            <Space
                android:layout_width="18dp"
                android:layout_height="18dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/abstrak"
                android:textAlignment="center"
                android:textStyle="italic"
                android:textSize="14sp"
                android:textColor="@color/colorPrimaryDark"/>
            <Space
                android:layout_width="18dp"
                android:layout_height="10dp" />
            <TextView
                android:id="@+id/skripsi_abstrak"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                tools:text="lorem ipsum"
                android:textSize="14sp"
                />
            <Space
                android:layout_width="18dp"
                android:layout_height="5dp" />
            <TextView
                android:id="@+id/skripsi_katakunci"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="lorem ipsum"
                android:textStyle="italic"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="13sp"
                />
        </LinearLayout>

    </ScrollView>


</android.support.constraint.ConstraintLayout>